* {
  box-sizing: border-box;
  -webkit-tap-highlight-color: rgba($black, 0); //  remove tap highlight color for mobile safari
}

*:before,
*:after {
  box-sizing: border-box;
}

:root {
  width: 100%;
  height: 100%;
  background-color: $white;
  box-sizing: border-box;
  color: $black;
  cursor: default;
  font: 66.66667% sans-serif;
}

body {
  // min-width: 1280px;
  width 100%
  height @width;
  font-family: $font-family-base;
  font-size: $font-size-base;
  line-height: $line-height-base;
  color: $text-color;
  background-color: $body-background-color;
  -webkit-font-smoothing: antialiased;
  -webkit-text-size-adjust: 100%;
}

// unify the setting of elements's margin and padding for browsers
body,div,dl,dt,dd,ul,ol,li,h1,h2,h3,h4,h5,h6,pre,code,form,fieldset,legend,input,textarea,p,blockquote,th,td,hr,button,article,aside,details,figcaption,figure,footer,header,hgroup,menu,nav,section {
  margin: 0;
  padding: 0;
}

// Reset fonts for relevant elements
button,input,select,textarea {
  font-family: inherit;
  font-size: inherit;
  line-height: inherit;
  color: inherit;
}

ul,
ol {
  list-style: none;
}

// Remove the clear button of a text input control in IE10+
input::-ms-clear, input::-ms-reveal {
  display: none;
}

textarea {
  resize: none !important
}

::selection {
  background: $base-color;
  color: $white;
}

// Links
body a {
  color: inherit;
  background: transparent;
  text-decoration: none;
  outline: none;
  cursor: pointer;
  transition: all $animation-duration-slow $ease;

  &:focus {
    text-decoration: none;
    text-decoration-skip: ink;
  }

  &:active,
  &:hover {
    outline: 0;
    text-decoration: none;
  }

  &[disabled] {
    color: $text-color-placeholder;
    cursor: not-allowed;
    pointer-events: none;
  }
}

h1, h2, h3, h4, h5, h6 {
  margin: 0;
  padding: 0;
  line-height: $line-height-base;
  color: $text-color-head;
  font-family: $font-family-headings;
  font-weight: $font-weight-normal;
}

h1 {
  font-size: $font-title-h1;
}

h2 {
  font-size: $font-title-h2;
}

h3 {
  font-size: $font-title-h3;
}

h4 {
  font-size: $font-title-h4;
}

h5 {
  font-size: $font-title-h5;
}

h6 {
  font-size: $font-title-h6;
}

.none {
  display: none !important;
}

scrollbar
::-webkit-scrollbar {
	width: .4em;;
	height: .4em;;
	background: transparent;
}

::-webkit-scrollbar-track {
	border-radius: 0;
}

::-webkit-scrollbar-thumb {
	border-radius: .2em;
	background-color: alpha($grey, .8);
}

::-webkit-scrollbar-thumb:hover {
	background-color: $grey;
}

::-webkit-input-placeholder {
  color: $grey;
}

:-moz-placeholder {
  color: $grey;
}

::-moz-placeholder {
  color: $grey;
}

:-ms-input-placeholder {
  color: $grey;
}

img {
  max-width: 100%;
  height: auto;
  vertical-align: middle;
  border: 0;
}

.el-card {
  margin-bottom 24px
  box-shadow 4px 4px 20px 0 alpha($black, .01)
  border-radius 0
  border none
  .el-card__header {
    padding 12px 24px
  }
  .el-card__body {
    padding 24px
  }
}
