* {
  box-sizing: border-box;
  -webkit-tap-highlight-color: rgba($black, 0); //  remove tap highlight color for mobile safari
}

*:before,
*:after {
  box-sizing: border-box;
}

:root {
  width: 100%;
  height: 100%;
  background-color: $white;
  box-sizing: border-box;
  color: $black;
  cursor: default;
  font: 66.66667% sans-serif;
}

body {
  min-width: 1280px;
  height: 100%;
  font-family: $font-family-base;
  font-size: $font-size-base;
  line-height: $line-height-base;
  color: $text-color;
  background-color: $body-background !important;
  -webkit-font-smoothing: antialiased;
  -webkit-text-size-adjust: 100%;
}

// unify the setting of elements's margin and padding for browsers
body,div,dl,dt,dd,ul,ol,li,h1,h2,h3,h4,h5,h6,pre,code,form,fieldset,legend,input,textarea,p,blockquote,th,td,hr,button,article,aside,details,figcaption,figure,footer,header,hgroup,menu,nav,section {
  margin: 0;
  padding: 0;
}

// Reset fonts for relevant elements
button,input,select,textarea {
  font-family: inherit;
  font-size: inherit;
  line-height: inherit;
  color: inherit;
}

ul,
ol {
  list-style: none;
}

// Remove the clear button of a text input control in IE10+
input::-ms-clear, input::-ms-reveal {
  display: none;
}

input {
  width: 175px;
  height: $input-height-base;
  line-height: $input-height-base;
  background: $input-bg;
  font-size: $font-size-base;
  font-weight: $font-weight-normal;
  border: none;
  -webkit-appearance: none;
  
  &::-webkit-input-placeholder {
    color: $input-placeholder-color;
  }
  &::-moz-placeholder {
    color: $input-placeholder-color;
  }
  &::-moz-placeholder {  /* Firefox 19+ */
    color: $input-placeholder-color;
  }
  &::-ms-input-placeholder {
    color: $input-placeholder-color;
  }
  &:focus {
    outline: none;
  }
}

textarea {
  resize: none;
}

::selection {
  background: $blue-6;
  color: $white;
}

// Links
body a {
  color: inherit;
  background: transparent;
  text-decoration: none;
  outline: none;
  cursor: pointer;
  transition: all $animation-duration-slow $ease;

  &:focus {
    text-decoration: none;
    text-decoration-skip: ink;
  }

  &:active,
  &:hover {
    outline: 0;
    text-decoration: none;
  }

  &[disabled] {
    color: $disabled-color;
    cursor: not-allowed;
    pointer-events: none;
  }
}

// Utility classes
.clearfix {
  clearfix();
}

h1, h2, h3, h4, h5, h6 {
  margin: 0;
  padding: 0;
  line-height: $line-height-base;
  color: $heading-color;
  font-family: $font-family-headings;
  font-weight: $font-weight-normal;
}

h1 {
  font-size: $font-title-h1;
}

h2 {
  font-size: $font-title-h2;
}

h3 {
  font-size: $font-title-h3;
}

h4 {
  font-size: $font-title-h4;
}

h5 {
  font-size: $font-title-h5;
}

h6 {
  font-size: $font-title-h6;
}

.none {
  display: none !important;
}

scrollbar
::-webkit-scrollbar {
	width: .4em;;
	height: .4em;;
	background: transparent;
}

::-webkit-scrollbar-track {
	border-radius: 0;
}

::-webkit-scrollbar-thumb {
	border-radius: .2em;
	background-color: $grey-5;
}

::-webkit-scrollbar-thumb:hover {
	background-color: $grey-6;
}

::-webkit-input-placeholder {
  color: $grey-6;
}

:-moz-placeholder {
  color: $grey-6;
}

::-moz-placeholder {
  color: $grey-6;
}

:-ms-input-placeholder {
  color: $grey-6;
}

img {
  max-width: 100%;
  height: auto;
  vertical-align: middle;
  border: 0;
}
